<p id="notice"><%= notice %></p>

<h1>Images Uploaded</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
		<tr><%= post.title %></tr> <br> <br>
		<tr><%= post.description %></tr> <br>
		<tr><%= image_tag post.image.url(:thumb) %></tr> <br>
        <tr><%= link_to 'Show', post %></tr>
        <tr><%= link_to 'Edit', edit_post_path(post) %></tr>
        <tr><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></tr><br>
		<h3>-----------------------------------</h3>
		<br>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

